<h1>All the categories!</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.description %></td>
      <td><%= link_to 'Show', category_path(category) %></td>
    </tr>
  <% end %>
</table>
